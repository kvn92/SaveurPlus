{% extends 'base.html.twig' %}

{% block title %}Gestion des {{ title}}{% endblock %}

{% block body %}
<div class="container mt-5">
  <div>
    <a href="{{ path('pays.index') }}" class="btn btn-secondary mb-3">Retour</a>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="mb-4 text-center">Gestion des {{ title }}</h1>

      <div class="card shadow-sm p-4">
        <div class="card-header bg-primary text-white text-center">
          <h3 class="mb-0">Formulaire de {{ title }}</h3>
        </div>

        <div class="card-body">
          {{ form_start(form) }}

          <div class="form-group mb-3">
            {{ form_label(form.pays, 'Pays', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.pays) }}
          </div>

          <div class="form-group mb-3">
            {{ form_label(form.isActive, 'Statut', {'label_attr': {'class': 'form-label d-block'}}) }}
            
            <div class="form-check form-check-inline">
              {{ form_widget(form.isActive.0, {'attr': {'class': 'form-check-input'}}) }}
              {{ form_label(form.isActive.0, 'Active', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <div class="form-check form-check-inline">
              {{ form_widget(form.isActive.1, {'attr': {'class': 'form-check-input'}}) }}
              {{ form_label(form.isActive.1, 'Désactivé', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            {{ form_errors(form.isActive) }}
          </div>



          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
